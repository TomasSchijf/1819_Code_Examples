<Window x:Class="_1819_12_Example_School.wShowStudents"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1819_12_Example_School"
        mc:Ignorable="d"
        Title="Studenten overzicht" Height="420" Width="773">
    <Grid>
        <DataGrid x:Name="dgStudents" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="369" Margin="10,10,0,0" VerticalAlignment="Top" Width="745">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Opleiding" Binding="{Binding group.course}"/>
                <DataGridTextColumn Header="Klas" Binding="{Binding group.name}"/>
                <DataGridTextColumn Header="Voornaam" Binding="{Binding firstname}"/>
                <DataGridTextColumn Header="Achternaam" Binding="{Binding lastname}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
